<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:background="@color/cbw_waiting_for_customer_grouper_background"
    android:paddingBottom="@dimen/cbw_grouper_container_padding_vertical"
    android:paddingTop="@dimen/cbw_grouper_container_padding_vertical">

    <TextView
        android:id="@+id/cbw_group_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:textColor="@color/cbw_grouper_text"
        tools:text="@string/waiting_for_you"/>

    <TextView
        android:id="@+id/cbw_customers_count"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_toLeftOf="@+id/cbw_arrow"
        android:layout_toStartOf="@+id/cbw_arrow"
        android:background="@drawable/cbw_customer_count_background"
        android:gravity="center"
        android:textColor="@color/withe"
        android:visibility="gone"
        android:textSize="@dimen/cbw_customer_count_text_size"
        tools:text="3"/>

    <ImageView
        android:id="@+id/cbw_arrow"
        android:layout_width="@dimen/list_item_parent_arrow_size"
        android:layout_height="@dimen/list_item_parent_arrow_size"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:contentDescription="@string/arrow"
        android:src="@drawable/ic_home_tab_arrow_down"/>

</RelativeLayout>