<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f3e4c4"
    android:orientation="vertical"
    android:paddingLeft="7dip"
    android:paddingRight="7dip"
    android:paddingBottom="7dip"
    android:paddingTop="7dip"
    android:gravity="center"
    android:id="@+id/swipeRefreshLayout">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/balance_container"
        >

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:clickable="true"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:textAlignment="center"
        android:background="@drawable/myrect"
        android:orientation="vertical"
        android:paddingTop="7dp"
        android:paddingBottom="7dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:elevation="14dp"
            android:background="@drawable/myrect"
            android:paddingTop="15dp"
            android:paddingBottom="30dp"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="94dp"
                android:orientation="horizontal"
                android:gravity="center"
                >

                <ImageView
                    android:id="@+id/account_picture1"
                    android:layout_width="94dp"
                    android:layout_height="94dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/account_type_current_small"
                    android:layout_gravity="center"
                    />

                <ImageView
                    android:id="@+id/account_picture2"
                    android:layout_width="94dp"
                    android:layout_height="94dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/account_type_savings_1_small"
                    android:layout_gravity="center"
                    />

                <ImageView
                    android:id="@+id/account_picture3"
                    android:layout_width="94dp"
                    android:layout_height="94dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/account_type_savings_2_small"
                    android:layout_gravity="center"
                    />
            </LinearLayout>



            <TextView
                android:id="@+id/txtViewTypeBalance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingLeft="7dip"
                android:paddingRight="7dip"
                android:paddingTop="3dip"
                android:paddingBottom="10dip"
                android:textColor="#FF666666"
                android:textSize="30sp"
                android:text="available balance"
                />
                <TextView
                    android:id="@+id/txtViewBalance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingLeft="2dip"
                    android:paddingRight="2dip"
                    android:paddingTop="3dip"
                    android:paddingBottom="3dip"
                    android:textColor="#FF666666"
                    android:textSize="45sp"
                    android:textStyle="bold"
                    android:text="mBTC     0"
                    />


            </LinearLayout>

        <Space
            android:layout_width="fill_parent"
            android:layout_height="30dp" />


        <com.bitdubai.reference_niche_wallet.bitcoin_wallet.common.custom_view.CustomComponentMati
            android:id="@+id/custonMati"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </com.bitdubai.reference_niche_wallet.bitcoin_wallet.common.custom_view.CustomComponentMati>
        <!--<include layout="@layout/wallet_manager_transaction_view"-->
            <!--android:paddingTop="5dp"-->
            <!--android:paddingBottom="5dp"/>-->

    </LinearLayout>
</ScrollView>
</RelativeLayout>
</android.support.v4.widget.SwipeRefreshLayout>