<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="7dip"
    android:paddingRight="7dip"
    android:gravity="end|right">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="106dp"


        >

        <ImageView
            android:id="@+id/frame_tx_record"
            android:layout_width="match_parent"
            android:layout_height="106dp"
            android:scaleType="centerCrop"

            android:layout_gravity="center"
            android:background="@drawable/object_frame_3x1_filled"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentRight="true"

            >



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:paddingTop="10dip">
                <TextView android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textColor="#FF666666"
                    android:textSize="12sp"
                    android:text="Date"
                    android:textStyle="normal"
                    android:paddingBottom="1dip"
                    android:paddingTop="2dip"
                    android:layout_gravity="start" />



                <TextView   android:id="@+id/money_saved"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:textColor="#FF666666"
                    android:layout_gravity="end"
                    android:text="amount"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:paddingBottom="1dip"
                    android:paddingTop="2dip"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="10dip"
                android:paddingRight="10dip">
                <TextView android:id="@+id/average"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#FF666666"
                    android:text="average"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    android:paddingBottom="1dip"
                    android:paddingTop="1dip"
                    android:layout_weight="1"/>
                <TextView android:id="@+id/discount_count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#FF666666"
                    android:textSize="12sp"
                    android:text="Discount Count"
                    android:textStyle="normal"
                    android:gravity="end"
                    android:layout_weight=".5"
                    android:paddingBottom="1dip"
                    android:paddingTop="1dip"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="10dip"
                android:paddingRight="10dip" android:paddingBottom="2dip" android:paddingTop="2dip">



            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:paddingBottom="10dip"
                android:layout_gravity="bottom">





            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>