<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="7dip"
    android:paddingRight="7dip"
    android:paddingBottom="0dip"
    android:paddingTop="0dip"
    android:gravity="end|right">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="106dp"
        android:layout_height="106dp"

        >



        <ImageView
            android:id="@+id/profile_picture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/new_contact_profile_picture"
            android:layout_gravity="center"

            android:padding="6dp"
            />

        <ImageView
            android:id="@+id/frame_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/object_frame_1x1"
            android:layout_gravity="center"

            />



    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="106dp"


        >

    <ImageView
        android:id="@+id/frame_tx_record"
        android:layout_width="match_parent"
        android:layout_height="106dp"
        android:scaleType="centerCrop"

        android:layout_gravity="center"
        android:background="@drawable/object_frame_3x1_filled"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentRight="true"
android:paddingTop="8dip"
        android:paddingBottom="8dip"
        android:paddingRight="8dip"
        android:paddingLeft="8dip"
        >

        <EditText
            android:id="@+id/amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingTop="1dip"
            android:paddingBottom="3dip"
            android:textColor="#FF666666"
            android:textSize="25sp"
            android:textStyle="normal"
            android:hint="$0.00"

            android:layout_gravity="right" />




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >



            <EditText
                android:id="@+id/notes"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"

                android:textColor="#FF666666"
                android:textSize="15sp"
                android:textStyle="normal"
                android:hint="Notes"
                android:layout_gravity="left"

                android:paddingTop="3dip"
                android:paddingLeft="4dip"
                android:paddingRight="4dip"
                />





            <TextView
                android:id="@+id/when"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="7dip"
                android:paddingRight="4dip"
                android:paddingTop="3dip"
                android:paddingBottom="3dip"
                android:textColor="#FF666666"
                android:textSize="15sp"
                android:textStyle="normal"
                android:text="now"
                android:gravity="right" />


        </LinearLayout>


        <EditText
            android:id="@+id/contact_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"


            android:textColor="#FF666666"
            android:textSize="18sp"
            android:textStyle="bold"


            android:hint="New contact"
            android:gravity="right"

            android:paddingLeft="4dip"
            android:paddingRight="4dip"

            android:paddingTop="3dip"
            android:paddingBottom="3dip"



            />



    </LinearLayout>
 </RelativeLayout>
</LinearLayout>