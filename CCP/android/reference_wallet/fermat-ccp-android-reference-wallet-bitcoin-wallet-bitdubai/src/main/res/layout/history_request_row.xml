<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="140dp"
    android:background="#FFF"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingTop="15dp"
        >

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                >

                <ImageView android:id="@+id/profile_Image"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:src="@drawable/kid_3"
                    android:scaleType="centerCrop"
                    android:layout_margin="3dip"
                    />

            </FrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="12dp"
            android:paddingLeft="20dp"
            android:orientation="vertical">


            <com.bitdubai.fermat_android_api.layer.definition.wallet.views.FermatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_contactName"
                android:text="Matias Furszyfer"
                android:textColor="#06356f"
                android:fontFamily="roboto"
                />

            <com.bitdubai.fermat_android_api.layer.definition.wallet.views.FermatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_amount"
                android:text="1.4 BTC"
                android:textSize="18dp"
                android:textColor="#1d1d26"
                android:fontFamily="roboto"
                android:paddingTop="7dp"
                />



        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="12dp"
            android:paddingRight="20dp"
            android:orientation="vertical"
            android:gravity="end"
            android:layout_weight="1"
            >

            <com.bitdubai.fermat_android_api.layer.definition.wallet.views.FermatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_notes"
                android:text="Conference ticket"
                android:textSize="12dp"
                android:textColor="#9a9a9c"
                android:fontFamily="roboto"
                />

            <com.bitdubai.fermat_android_api.layer.definition.wallet.views.FermatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_time"
                android:text="03 Feb 2014"
                android:textSize="10dp"
                android:textColor="#9a9a9c"
                android:fontFamily="roboto"/>

        </LinearLayout>



    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:paddingRight="15dp"
        android:visibility="gone"
        android:id="@+id/linear_layour_container_state"
        >


        <com.bitdubai.fermat_android_api.layer.definition.wallet.views.FermatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_state"
            android:text="Accepted"
            android:textColor="#1173aa"
            android:textSize="13dp"
            android:layout_marginRight="10dp"/>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:paddingRight="15dp"
        android:id="@+id/linear_layour_container_buttons"
        >

        <Button
            android:layout_width="80dp"
            android:layout_height="25dp"
            android:id="@+id/btn_refuse_request"
            android:textSize="12dp"
            android:text="Deny"
            android:textColor="#1d1d26"
            android:layout_marginRight="7dp"
            android:background="#d3d3d3"
            />


        <Button
            android:layout_width="80dp"
            android:layout_height="25dp"
            android:id="@+id/btn_accept_request"
            android:textSize="12dp"
            android:text="Accept"
            android:layout_marginLeft="7dp"
            android:textColor="#fff"
            android:background="#1173aa"/>




    </LinearLayout>




</LinearLayout>