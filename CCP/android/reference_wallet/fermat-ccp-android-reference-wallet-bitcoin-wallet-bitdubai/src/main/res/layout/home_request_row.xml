<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="20dp"
        android:paddingTop="15dp"
        >

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/contactIcon"
                android:padding="3dp"
                android:layout_marginLeft="16dp"
                android:src="@drawable/luis_profile_picture"

                />




        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="12dp"
            android:paddingLeft="20dp"
            android:orientation="vertical">

            <com.bitdubai.fermat_android_api.layer.definition.wallet.views.FermatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_amount"
                android:text="1.4 BTC"
                android:textSize="18dp"
                android:textColor="#1d1d26"
                android:fontFamily="roboto"
                />

            <com.bitdubai.fermat_android_api.layer.definition.wallet.views.FermatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_contactName"
                android:text="Matias Furszyfer"
                android:textColor="#6e6e71"
                android:fontFamily="roboto"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="12dp"
            android:paddingRight="15dp"
            android:orientation="vertical"
            android:gravity="end"
            android:layout_weight="1"
            >

            <com.bitdubai.fermat_android_api.layer.definition.wallet.views.FermatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_notes"
                android:text="Conference ticket"
                android:textSize="13dp"
                android:textColor="#5b5993"
                android:fontFamily="roboto"
                />

            <com.bitdubai.fermat_android_api.layer.definition.wallet.views.FermatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_time"
                android:text="03 Feb 2014"
                android:textSize="10dp"
                android:textColor="#6e6e71"
                android:fontFamily="roboto"
                />

        </LinearLayout>



    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:paddingRight="15dp"
        >


        <Button
            android:layout_width="80dp"
            android:layout_height="25dp"
            android:id="@+id/btn_accept_request"
            android:textSize="12dp"
            android:text="Accept"
            android:layout_marginRight="5dp"
            android:textColor="#fff"
            android:background="@drawable/bg_home_accept_normal"/>

        <Button
            android:layout_width="80dp"
            android:layout_height="25dp"
            android:id="@+id/btn_refuse_request"
            android:textSize="12dp"
            android:text="Refuse"
            android:textColor="#56705757"
            android:background="@drawable/bg_home_cancel_normal"
            />



    </LinearLayout>



</LinearLayout>