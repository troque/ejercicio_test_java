<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/transacion_form">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:paddingLeft="7dip"
        android:paddingRight="7dip"
        android:id="@+id/send_form"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/frame_tx_record"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:layout_gravity="center"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_alignParentRight="true"
                android:background="@android:color/transparent">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:id="@+id/profile_Image"
                        android:src="@drawable/profile_image"
                        android:layout_marginLeft="12dp"/>

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Name"
                            android:textColor="#12aca1"
                            android:textSize="12sp"
                            android:layout_marginLeft="16dp"
                            />

                        <AutoCompleteTextView
                            android:id="@+id/contact_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Name"
                            android:textColor="#1d1d26"
                            android:textColorHint="#9a9a9c"
                            android:textSize="16sp"
                            android:textStyle="normal"
                            android:paddingTop="25dip"
                            android:paddingLeft="21dip"
                            android:paddingRight="14dip"
                            android:paddingBottom="7dip"
                            android:ems="10"
                            android:layout_weight="0.2"
                            android:background="@null"
                            />
                    </FrameLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_address"
                    android:layout_width="match_parent"
                    android:layout_height="47dp"
                    android:orientation="horizontal"
                    android:paddingLeft="7dip"
                    android:paddingBottom="3dip"
                    android:paddingTop="3dip"
                    android:paddingRight="7dip"
                    android:visibility="gone"
                    >
                    <EditText android:id="@+id/address"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center_vertical"
                        android:textSize="20sp"
                        android:textStyle="normal"
                        android:hint="address"
                        android:textColor="#1d1d26"
                        android:textColorHint="#4f4f4f"
                        android:paddingTop="7dip"
                        android:paddingLeft="14dip"
                        android:paddingRight="14dip"
                        android:paddingBottom="7dip"
                        android:layout_gravity="end"
                        android:layout_weight="1"
                        android:background="@null"/>
                    <ImageView
                        android:id="@+id/paste_from_clipboard_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_action_send_now_grey"
                        android:padding="3dp"/>

                    <ImageView
                        android:id="@+id/scan_qr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_action_camera_grey"
                        android:padding="3dp"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:visibility="visible"
                    android:background="#bbccc7"></View>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Amount"
                    android:textColor="#12aca1"
                    android:textSize="12sp"
                    android:layout_marginLeft="16dp"
                    android:paddingTop="12dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="[bits]"
                        android:textColor="#12aca1"
                        android:textSize="12sp"
                        android:layout_marginLeft="5dp"
                        android:paddingTop="12dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="7dip"
                    android:paddingBottom="3dip"
                    android:paddingTop="3dip"
                    android:paddingRight="7dip">



                    <EditText
                        android:id="@+id/amount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:paddingTop="7dip"
                        android:paddingLeft="14dip"
                        android:paddingRight="14dip"
                        android:paddingBottom="7dip"
                        android:textColor="#1d1d26"
                        android:textColorHint="#9a9a9c"
                        android:textSize="16sp"
                        android:textStyle="normal"
                        android:hint="0 Bits"
                        android:layout_weight="0.54"
                        android:inputType="numberDecimal"
                        android:state_selected = "true"
                        android:background="@null"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#bbccc7"></View>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Notes"
                    android:layout_marginLeft="16dp"
                    android:paddingTop="12dp"
                    android:textColor="#12aca1"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="7dip"
                    android:paddingBottom="3dip"
                    android:paddingTop="3dip"
                    android:paddingRight="7dip"
                    android:id="@+id/linear_notes">
                    <EditText
                        android:id="@+id/notes"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center_vertical"
                        android:textSize="20sp"
                        android:textStyle="normal"
                        android:hint="Description"
                        android:textColor="#1d1d26"
                        android:textColorHint="#9a9a9c"
                        android:paddingTop="7dip"
                        android:paddingLeft="14dip"
                        android:paddingRight="14dip"
                        android:paddingBottom="7dip"
                        android:layout_gravity="end"
                        android:state_selected = "false"
                        android:background="@null"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="7dip"
                    android:paddingBottom="10dip"
                    android:paddingTop="3dip"
                    android:paddingRight="7dip"
                    android:id="@+id/linear_send"
                    >
                    <com.bitdubai.fermat_android_api.layer.definition.wallet.views.FermatButton
                        android:id="@+id/send_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_action_send_now_grey"
                        android:padding="3dp"
                        android:clickable="true"
                        android:textSize="14sp"
                        android:text="Confirm"
                        android:background="#1173aa"
                        android:textColor="#fff"
                        />
                </LinearLayout>


            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>