<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="20dp"
        android:paddingTop="15dp"
        >

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:background="#cbcbcb">

            <ImageView android:id="@+id/profile_Image"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:src="@drawable/kid_3"
                android:scaleType="centerCrop"
                android:layout_margin="3dip"
                />

        </FrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="12dp"
            android:paddingLeft="20dp"
            android:orientation="vertical">

            <com.bitdubai.fermat_android_api.layer.definition.wallet.views.FermatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_amount"
                android:text="1.4 BTC"
                android:textSize="18dp"
                android:textColor="#1d1d26"
                android:fontFamily="roboto"
                />

            <com.bitdubai.fermat_android_api.layer.definition.wallet.views.FermatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_contactName"
                android:text="Matias Furszyfer"
                android:textColor="#6e6e71"
                android:fontFamily="roboto"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="12dp"
            android:paddingRight="15dp"
            android:orientation="vertical"
            android:gravity="end"
            android:layout_weight="1"
            >

            <com.bitdubai.fermat_android_api.layer.definition.wallet.views.FermatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_notes"
                android:text="Conference ticket"
                android:textSize="16dp"
                android:textColor="#1173aa"
                android:fontFamily="roboto"
                />

            <com.bitdubai.fermat_android_api.layer.definition.wallet.views.FermatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_time"
                android:text="03 Feb 2014"
                android:textSize="13dp"
                android:textColor="#6e6e71"
                android:fontFamily="roboto"/>

        </LinearLayout>



    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#6e6e71"/>


</LinearLayout>