<?xml version="1.0" encoding="utf-8"?>



    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#f3e4c4"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Preference_Category">

        <com.bitdubai.fermat_android_api.layer.definition.wallet.views.FermatTextView
            android:id="@+id/textView_header"
            android:layout_width="170dp"
            android:layout_height="30dp"
            android:textSize="12sp"
            android:text="22/1/2012"
            android:gravity="left"
            android:paddingBottom="5sp"
            android:paddingRight="5sp"
            android:paddingTop="5sp"
            android:paddingLeft="12sp"
            android:textColor="@color/material_blue_grey_800"
            android:visibility="gone"
            />

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/linear_layout_transaction">



            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/person12"
                android:padding="5sp"
                android:id="@+id/imageView_contact"
                />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >


                <com.bitdubai.fermat_android_api.layer.definition.wallet.views.FermatTextView
                    android:id="@+id/textView_contact_name"
                    android:layout_width="170dp"
                    android:layout_height="30dp"
                    android:textSize="12sp"
                    android:text="Luis Molina"
                    android:gravity="left"
                    android:paddingBottom="5sp"
                    android:paddingRight="5sp"
                    android:paddingTop="5sp"
                    android:paddingLeft="12sp"
                    android:textColor="@color/material_blue_grey_800"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/bitcoin_icon"
                        android:paddingLeft="10sp"
                        android:paddingRight="5sp"
                        android:paddingBottom="5sp"/>

                    <com.bitdubai.fermat_android_api.layer.definition.wallet.views.FermatTextView
                        android:id="@+id/textView_type"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="12sp"
                        android:text="Received"
                        android:gravity="left"
                        android:padding="5sp"
                        android:textColor="@color/material_blue_grey_800"
                        />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >


                <com.bitdubai.fermat_android_api.layer.definition.wallet.views.FermatTextView
                    android:id="@+id/textView_amount"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="12sp"
                    android:text="2.00 BTC"
                    android:gravity="center"
                    android:padding="5sp"
                    android:layout_weight="1"
                    android:textColor="@color/material_blue_grey_800"
                    />
                <com.bitdubai.fermat_android_api.layer.definition.wallet.views.FermatTextView
                    android:id="@+id/textView_time"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="12sp"
                    android:text="12:24 hs"
                    android:gravity="center"
                    android:padding="5sp"
                    android:layout_weight="1"
                    android:textColor="@color/material_blue_grey_800"
                    />
            </LinearLayout>


        </LinearLayout>


</LinearLayout>

