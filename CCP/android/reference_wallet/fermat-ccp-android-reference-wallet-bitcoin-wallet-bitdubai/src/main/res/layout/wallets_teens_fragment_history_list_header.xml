<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="7dip"
    android:paddingRight="7dip"
    android:paddingBottom="0dip"
    android:paddingTop="0dip"
    android:gravity="end|right">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="106dp"


        >

        <ImageView
            android:id="@+id/frame_tx_record"
            android:layout_width="match_parent"
            android:layout_height="106dp"
            android:scaleType="centerCrop"

            android:layout_gravity="center"
            android:background="@drawable/object_frame_3x1_filled"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_alignParentRight="true"

            >



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="12dip"
                android:paddingRight="12dip"
                android:paddingTop="10dip">

                <TextView android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center|start"

                    android:textSize="12sp"
                    android:textStyle="normal"
                    android:text="date"
                    android:textColor="#FF666666"
                    android:layout_gravity="center"
                    android:layout_weight="1"/>
1
                <TextView
                    android:id="@+id/contact_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    android:text="New contact name"
                    android:textColor="#FF666666"
                    android:layout_gravity="center"

                    />
                <TextView android:id="@+id/total_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$amount"
                    android:gravity="end"
                    android:textColor="#FF666666"
                    android:layout_weight="1"
                    android:textStyle="normal"
                    android:textSize="12sp"
                    android:paddingBottom="2dip"
                    android:paddingTop="2dip"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="12dip"
                android:paddingRight="12dip"
                android:weightSum="1">
                <TextView
                    android:id="@+id/when"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FF666666"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    android:text="yesterday"
                    android:gravity="start" android:paddingBottom="2dip"
                    android:paddingTop="2dip"/>

                <TextView android:id="@+id/history_count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="history count"
                    android:textColor="#FF666666"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    android:paddingBottom="2dip"
                    android:paddingTop="2dip"
                    android:gravity="end"

                    />

            </LinearLayout>
<TextView
    android:layout_width="match_parent"
    android:layout_height="0.5dp"
    android:layout_marginLeft="290dp"
    android:layout_marginRight="10dp"
    android:background="#FF666666"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="12dip"
                android:paddingRight="12dip" android:paddingBottom="2dip" android:paddingTop="2dip">

                <TextView
                    android:id="@+id/notes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textColor="#FF666666"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    android:text="notes"
                    android:layout_gravity="start"
                    android:paddingBottom="2dip"
                    android:paddingTop="2dip" />
                <TextView
                    android:id="@+id/amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:textColor="#FF666666"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:text="sdfs"
                    android:paddingBottom="2dip"
                    android:paddingTop="2dip"
                    android:layout_gravity="end" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>