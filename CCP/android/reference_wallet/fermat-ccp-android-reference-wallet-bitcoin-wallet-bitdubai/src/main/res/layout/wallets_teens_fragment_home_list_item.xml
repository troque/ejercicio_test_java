<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="210dp"
    android:background="@drawable/background_tabs_diagonal_rotated"
    android:orientation="vertical"
    android:paddingLeft="7dip"
    android:paddingRight="7dip"
    android:paddingBottom="7dip"
    android:paddingTop="7dip"
    >



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="94dp"
            android:orientation="horizontal"
            android:gravity="center"
            >

            <ImageView
            android:id="@+id/account_picture1"
            android:layout_width="94dp"
            android:layout_height="94dp"
            android:scaleType="centerCrop"
            android:src="@drawable/fermat_bitcoin2"
            android:layout_gravity="center"
            />

            <ImageView
                android:id="@+id/account_picture2"
                android:layout_width="94dp"
                android:layout_height="94dp"
                android:scaleType="centerCrop"
                android:src="@drawable/fermat_coin_1"
                android:layout_gravity="center"
                />

            <ImageView
                android:id="@+id/account_picture3"
                android:layout_width="94dp"
                android:layout_height="94dp"
                android:scaleType="centerCrop"
                android:src="@drawable/fermat_bitcoin2"
                android:layout_gravity="center"
                />
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentRight="true"

        >





        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            >

            <com.bitdubai.fermat_android_api.layer.definition.wallet.views.FermatTextView
                android:id="@+id/balance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingLeft="7dip"
                android:paddingRight="7dip"
                android:paddingTop="3dip"
                android:paddingBottom="3dip"
                android:textColor="#FF666666"
                android:textSize="45sp"
                android:textStyle="bold"
                android:text="$0.00"




                />


            <com.bitdubai.fermat_android_api.layer.definition.wallet.views.FermatTextView
                android:id="@+id/balance_available"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:paddingLeft="7dip"
                android:paddingRight="7dip"
                android:paddingTop="3dip"
                android:paddingBottom="3dip"
                android:textColor="#FF666666"
                android:textSize="20sp"
                android:textStyle="bold"


                android:text="available"
                android:layout_gravity="center_horizontal"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"


                android:clickable="true"

                android:onClick="onAvailableBalanceIconClicked"


                />

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>