<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="170dp"


    >
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:paddingTop="5dp"
        android:paddingBottom="55dp"

        >
        <ImageView
            android:id="@+id/image_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"


            android:src="@drawable/store_1"
            android:scaleType="centerCrop"
            android:layout_centerHorizontal="true"

            />
    </RelativeLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"

        >
        <ImageView
            android:id="@+id/bacagraun"
            android:layout_width="match_parent"
            android:layout_height="match_parent"


            android:layout_centerHorizontal="true"

            android:background="@drawable/grid_background"
            />
    </RelativeLayout>









    <ImageView
        android:id="@+id/favorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:src="@drawable/grid_background_not_favorite"

        android:scaleType="fitCenter"
        android:layout_centerHorizontal="true"

        android:scaleX="0.6"
        android:scaleY="0.6"


        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"


        android:paddingLeft="14dp"
        android:paddingRight="0dp"
        android:paddingTop="4dp"
        android:paddingBottom="0dp"

        />

    <ImageView
        android:id="@+id/sale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:src="@drawable/grid_background_sale_flipped"

        android:scaleType="fitCenter"
        android:layout_centerHorizontal="true"




        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"


        android:paddingLeft="0dp"
        android:paddingRight="14dp"
        android:paddingTop="20dp"
        android:paddingBottom="0dp"

        />




    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:paddingTop="6dp"
        android:paddingBottom="4dp"

        >

    </RelativeLayout>


    <TextView 
        android:id="@+id/company_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="App name"
        android:textAlignment="center"


        android:textColor="@color/black_overlay"
        android:textStyle="bold"
        android:textSize="13sp"

        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"

        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:paddingTop="0dp"
        android:paddingBottom="52dp"
        />

    <TextView
        android:id="@+id/company_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="descripcion direccion"
        android:textAlignment="center"


        android:textColor="#aaaaaa"
        android:textStyle="italic"
        android:textSize="8sp"

        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"

        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:paddingTop="0dp"
        android:paddingBottom="42dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingBottom="32dip"
        android:gravity="center">
        <TextView android:id="@+id/percentage"
            android:layout_width="wrap_content"
            android:textColor="#aaaaaa"
            android:layout_height="wrap_content"
            android:text="%14"
            android:textSize="8sp"
            android:textStyle="normal"
            />
        <ImageView android:id="@+id/triangle"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:src="@drawable/red_triangle"/>

        </LinearLayout>
    <TextView 
        android:id="@+id/title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#aaaaaa"
        android:text="web site"
        android:textSize="10sp"
        android:textStyle="bold"

        android:gravity="center"

        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"


        android:paddingLeft="14dp"
        android:paddingRight="0dp"
        android:paddingTop="0dp"
        android:paddingBottom="12dp"

        />

    <TextView
        android:id="@+id/open_hours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#aaaaaa"
        android:text="horario"
        android:textSize="10sp"
        android:textStyle="normal"

        android:gravity="center"

        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"


        android:paddingLeft="14dp"
        android:paddingRight="0dp"
        android:paddingTop="0dp"
        android:paddingBottom="23dp"

        />




    <TextView
        android:id="@+id/availability"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:text="available"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:textColor="#aaaaaa"
        android:textSize="10sp"
        android:textStyle="bold"


        android:paddingLeft="0dp"
        android:paddingRight="14dp"
        android:paddingTop="0dp"
        android:paddingBottom="12dp"

       />

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"


    android:gravity="right"

    android:layout_alignParentBottom="true"
    android:layout_alignParentRight="true"

    android:paddingLeft="0dp"
    android:paddingRight="14dp"
    android:paddingTop="0dp"
    android:paddingBottom="22dp"
    >

    <ImageView
        android:id="@+id/clock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/grid_background_clock"
        android:scaleType="fitCenter"
        android:scaleX="0.9"
        android:scaleY="0.9"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/time_to_arrive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="time"

        android:textColor="#aaaaaa"
        android:textSize="10sp"
        android:textStyle="normal"



        />

    </LinearLayout>



</RelativeLayout>