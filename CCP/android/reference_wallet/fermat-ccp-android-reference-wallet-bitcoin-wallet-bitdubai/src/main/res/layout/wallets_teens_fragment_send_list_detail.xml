<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="7dip"
    android:paddingRight="7dip"
    android:paddingBottom="0dip"
    android:paddingTop="0dip"
    android:gravity="end|right"

    android:background="@drawable/background_tabs_diagonal_inverted"

    >

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="106dp"
        android:layout_height="82dp"

        >

    </RelativeLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="82dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/frame_tx_record"
            android:layout_width="match_parent"
            android:layout_height="82dp"
            android:scaleType="centerCrop"

            android:layout_gravity="center"
            android:background="@drawable/object_frame_3x1_filled"
            />

        <com.bitdubai.fermat_android_api.layer.definition.wallet.views.FermatTextView
            android:id="@+id/notes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="32dp"
            android:paddingLeft="45dp"
            android:paddingRight="45dp"
            android:paddingTop="0dp"
            android:textSize="12sp"
            android:text="Apartment rent Apartment rent long text here"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:textColor="#FF666666"



            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:paddingBottom="3dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp">
            <ImageView
                android:id="@+id/icon_send_to_contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_action_send_now_grey"
                android:onClick="onItemSelectedClicked"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/icon_chat_over_trx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_action_email_grey"
                android:onClick="onItemSelectedClicked"
                android:layout_weight="1"/>
        </LinearLayout>


        <com.bitdubai.fermat_android_api.layer.definition.wallet.views.FermatTextView
            android:id="@+id/when"
            android:layout_width="170dp"
            android:layout_height="30dp"
            android:paddingBottom="0dp"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:paddingTop="14dp"
            android:textSize="12sp"
            android:text="1 min ago a la 10:34 AM"
            android:gravity="left"
            android:textColor="#FF666666"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            />

        <com.bitdubai.fermat_android_api.layer.definition.wallet.views.FermatTextView
            android:id="@+id/amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:paddingBottom="2dp"
            android:paddingLeft="7dp"
            android:paddingRight="12dp"
            android:paddingTop="14dp"
            android:textSize="12sp"
            android:text="$3,300.00"
            android:gravity="right"
            android:textColor="#FF666666"
            android:textStyle="bold"


            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"


            />


    </RelativeLayout>

</LinearLayout>