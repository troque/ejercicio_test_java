<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fermat="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/wallet_store_catalog_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardView"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:background="#64A1CFB7"
        card_view:cardUseCompatPadding="true"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="4dp"
        card_view:contentPadding="10dp"
        card_view:cardPreventCornerOverlap="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView_profile_connection"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="3dp"
                android:contentDescription="@string/wallet_icon"
                tools:src="@drawable/adrian_profile_picture" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="2dp">

                <com.bitdubai.fermat_android_api.layer.definition.wallet.views.FermatTextView
                    android:id="@+id/txtView_profile_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:singleLine="true"
                    android:paddingLeft="7dp"
                    android:textColor="@android:color/black"
                    android:textSize="17sp"
                    fermat:typeface="CAVIAR_DREAMS_BOLD"
                    tools:text="Nombre de la wallet" />

                <com.bitdubai.fermat_android_api.layer.definition.wallet.views.FermatTextView
                    android:id="@+id/txtView_profile_phrase"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@id/txtView_profile_name"
                    android:singleLine="true"
                    android:paddingLeft="7dp"
                    android:textColor="@android:color/black"
                    android:textSize="12sp"
                    tools:text="Nombre del publisher" />


                <ImageView
                    android:id="@+id/imageView_chat"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:contentDescription="@string/wallet_icon"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    tools:src="@drawable/ic_action_chat" />


                <ImageView
                    android:id="@+id/imageView_add_connection"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:contentDescription="@string/wallet_icon"
                    android:layout_marginRight="7dp"
                    android:layout_toLeftOf="@id/imageView_chat"
                    tools:src="@drawable/ic_action_add_person_grey" />


                <com.bitdubai.fermat_android_api.layer.definition.wallet.views.FermatTextView
                    android:id="@+id/txtView_profile_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/wallet_store_link"
                    android:textSize="12sp"
                    android:layout_below="@id/txtView_profile_phrase"
                    tools:text="connect" />
            </RelativeLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>



</LinearLayout>


