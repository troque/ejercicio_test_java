<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linear_create_contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="3dip">

        <Button
            android:id="@+id/cancel_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/material_blue_grey_800"
            android:text="Cancel"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/save_contact_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/material_blue_grey_800"
            android:text="Register"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/accent_material_dark">

        <RelativeLayout
            android:id="@+id/loadingPanel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center" >

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminate="true"
                android:visibility="gone"/>
        </RelativeLayout>

        <ImageView
            android:id="@+id/imageView_profile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_default_account"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/txtView_account_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:shadowColor="#000"
            android:shadowDy="10"
            android:shadowRadius="8"
            android:text="Matias Furszyfer"
            android:textColor="#FFF"
            android:textSize="20dp"
            android:textStyle="bold" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="3dip"
        android:paddingLeft="7dip"
        android:paddingRight="7dip"
        android:paddingTop="6dip">

        <ImageView
            android:id="@+id/take_picture_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="7dip"
            android:layout_weight="0"
            android:background="@drawable/rounded_button_green_selector"
            android:src="@drawable/ic_action_camera_grey"
            android:elevation="2dip"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingBottom="3dip"
            android:paddingLeft="7dip"
            android:paddingRight="7dip"
            android:paddingTop="6dip">

            <EditText
                android:id="@+id/contact_name_prefix"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="3dip"
                android:layout_weight="1"
                android:background="@drawable/shape_section"
                android:elevation="2dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:hint="name prefix"
                android:inputType="textCapWords"
                android:paddingBottom="7dip"
                android:paddingLeft="7dip"
                android:paddingRight="7dip"
                android:paddingTop="7dip"
                android:singleLine="true"
                android:textColor="#72af9c"
                android:textColorHint="#BDBDBD"
                android:textSize="20sp"
                android:textStyle="normal"
                android:visibility="gone" />

            <EditText
                android:id="@+id/contact_name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="3dip"
                android:layout_weight="1"
                android:background="@drawable/shape_section"
                android:elevation="2dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:hint="name"
                android:inputType="textCapWords"
                android:paddingBottom="7dip"
                android:paddingLeft="7dip"
                android:paddingRight="7dip"
                android:paddingTop="7dip"
                android:singleLine="true"
                android:textColor="#72af9c"
                android:textColorHint="#BDBDBD"
                android:textSize="20sp"
                android:textStyle="normal"
                android:visibility="visible" />

            <EditText
                android:id="@+id/contact_middle_name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="3dip"
                android:layout_weight="1"
                android:background="@drawable/shape_section"
                android:elevation="2dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:hint="middle name"
                android:inputType="textCapWords"
                android:paddingBottom="7dip"
                android:paddingLeft="7dip"
                android:paddingRight="7dip"
                android:paddingTop="7dip"
                android:singleLine="true"
                android:textColor="#72af9c"
                android:textColorHint="#BDBDBD"
                android:textSize="20sp"
                android:textStyle="normal"
                android:visibility="gone" />

            <EditText
                android:id="@+id/contact_last_name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="3dip"
                android:layout_weight="1"
                android:background="@drawable/shape_section"
                android:elevation="2dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:hint="last name"
                android:inputType="textCapWords"
                android:paddingBottom="7dip"
                android:paddingLeft="7dip"
                android:paddingRight="7dip"
                android:paddingTop="7dip"
                android:singleLine="true"
                android:textColor="#72af9c"
                android:textColorHint="#BDBDBD"
                android:textSize="20sp"
                android:textStyle="normal"
                android:visibility="gone" />

            <EditText
                android:id="@+id/contact_name_sufix"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="3dip"
                android:layout_weight="1"
                android:background="@drawable/shape_section"
                android:elevation="2dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:hint="name sufix"
                android:inputType="textCapWords"
                android:paddingBottom="7dip"
                android:paddingLeft="7dip"
                android:paddingRight="7dip"
                android:paddingTop="7dip"
                android:singleLine="true"
                android:textColor="#72af9c"
                android:textColorHint="#BDBDBD"
                android:textSize="20sp"
                android:textStyle="normal"
                android:visibility="gone" />

            <EditText
                android:id="@+id/contact_alias"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="3dip"
                android:layout_weight="1"
                android:background="@drawable/shape_section"
                android:elevation="2dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:hint="alias"
                android:inputType="textCapWords"
                android:paddingBottom="7dip"
                android:paddingLeft="7dip"
                android:paddingRight="7dip"
                android:paddingTop="7dip"
                android:singleLine="true"
                android:textColor="#72af9c"
                android:textColorHint="#BDBDBD"
                android:textSize="20sp"
                android:textStyle="normal"
                android:visibility="gone" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/details_btn"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:layout_gravity="top"
            android:layout_margin="5dip"
            android:layout_weight="0"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_arrow_down" />
    </LinearLayout>





</LinearLayout>