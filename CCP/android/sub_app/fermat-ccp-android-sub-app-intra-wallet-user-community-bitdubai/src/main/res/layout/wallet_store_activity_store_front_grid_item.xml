<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:background="#f3e4c4">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="60dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp">

        <ImageView
            android:id="@+id/image_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:src="@drawable/store_1" />

    </RelativeLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="4dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:paddingTop="4dp">

        <ImageView
            android:id="@+id/bacagraun"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:background="@drawable/wallet_store_grid_item_background" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/favorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:paddingBottom="0dp"
        android:paddingLeft="14dp"
        android:paddingRight="0dp"
        android:paddingTop="4dp"
        android:scaleType="fitCenter"
        android:scaleX="0.6"
        android:scaleY="0.6"
        android:src="@drawable/grid_background_not_favorite" />

    <ImageView
        android:id="@+id/sale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:paddingBottom="0dp"
        android:paddingLeft="0dp"
        android:paddingRight="14dp"
        android:paddingTop="20dp"
        android:scaleType="fitCenter"
        android:src="@drawable/grid_background_sale_flipped" />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="4dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:paddingTop="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:paddingBottom="28dp">

            <ImageView
                android:id="@+id/star_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:scaleType="fitCenter"
                android:scaleX="0.8"
                android:scaleY="0.8"
                android:src="@drawable/grid_background_star_empty" />

            <ImageView
                android:id="@+id/star_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:scaleType="fitCenter"
                android:scaleX="0.8"
                android:scaleY="0.8"
                android:src="@drawable/grid_background_star_empty" />

            <ImageView
                android:id="@+id/star_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:scaleType="fitCenter"
                android:scaleX="0.8"
                android:scaleY="0.8"
                android:src="@drawable/grid_background_star_empty" />

            <ImageView
                android:id="@+id/star_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:scaleType="fitCenter"
                android:scaleX="0.8"
                android:scaleY="0.8"
                android:src="@drawable/grid_background_star_empty" />

            <ImageView
                android:id="@+id/star_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:scaleType="fitCenter"
                android:scaleX="0.8"
                android:scaleY="0.8"
                android:src="@drawable/grid_background_star_empty" />

        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/company_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:paddingBottom="52dp"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:paddingTop="0dp"
        android:text="App name"
        android:textAlignment="center"
        android:textColor="@color/black_overlay"
        android:textSize="13sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/company_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:paddingBottom="42dp"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:paddingTop="0dp"
        android:text="descripcion direccion"
        android:textAlignment="center"
        android:textColor="#aaaaaa"
        android:textSize="8sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:gravity="center"
        android:paddingBottom="12dp"
        android:paddingLeft="14dp"
        android:paddingRight="0dp"
        android:paddingTop="0dp"
        android:text="web site"
        android:textColor="#aaaaaa"
        android:textSize="10sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/open_hours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:gravity="center"
        android:paddingBottom="23dp"
        android:paddingLeft="14dp"
        android:paddingRight="0dp"
        android:paddingTop="0dp"
        android:text="horario"
        android:textColor="#aaaaaa"
        android:textSize="10sp"
        android:textStyle="normal" />


    <TextView
        android:id="@+id/value_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:gravity="right"
        android:paddingBottom="12dp"
        android:paddingLeft="0dp"
        android:paddingRight="14dp"
        android:paddingTop="0dp"
        android:text="reviews"
        android:textColor="#aaaaaa"
        android:textSize="10sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:gravity="right"
        android:paddingBottom="22dp"
        android:paddingLeft="0dp"
        android:paddingRight="14dp"
        android:paddingTop="0dp">

        <TextView
            android:id="@+id/time_to_arrive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="time"
            android:textColor="#aaaaaa"
            android:textSize="10sp"
            android:textStyle="normal" />

    </LinearLayout>

    <ImageView
        android:id="@+id/download"
        android:layout_width="28dp"
        android:layout_height="47dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:paddingBottom="32dp"
        android:paddingRight="13dp"
        android:scaleType="fitCenter"
        android:src="@drawable/wallet_store_download_icon" />

</RelativeLayout>