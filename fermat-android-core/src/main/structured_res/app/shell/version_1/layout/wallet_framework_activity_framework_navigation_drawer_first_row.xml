<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:background="#FFFFFF"
    >



    <ImageView
        android:id="@+id/icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/tessa_profile_picture"
        android:layout_gravity="center"

        />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"

        >

    <TextView
        android:id="@+id/txtView_description"
        android:text="@+id/label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black_overlay"

        android:paddingBottom="14dip"
        android:paddingLeft="8dip"
        android:paddingRight="8dip"
        android:paddingTop="14dip"
        android:textColor="#DDDDDDDD"
        android:textSize="16sp"

        android:layout_alignParentBottom="true"
        android:gravity="center"


        >

    </TextView>

</FrameLayout>

    <ImageView
        android:id="@+id/icon_edit_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_action_edit"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:paddingBottom="7dp"
        android:paddingTop="7dp"
        android:onClick="onNavigationDrawerEditProfileIconClicked"
        />


    <ImageView
        android:id="@+id/icon_edit_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_action_camera"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:paddingBottom="7dp"
        android:paddingTop="7dp"

        />


</RelativeLayout>